<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="a1">
        <jta-data-source>java:jboss/datasources/Timesheet</jta-data-source>
        <class>ca.bcit.infosys.inventory.model.EmployeeModel</class>
        <class>ca.bcit.infosys.inventory.model.TimesheetModel</class>
        <class>ca.bcit.infosys.inventory.model.TimesheetRowModel</class>
          
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect"/>
         <property name="hibernate.hbm2ddl.auto" value="validate"/>
         <property name="hibernate.show_sql" value="false"/>
         <property name="hibernate.format_sql" value="true"/>
      </properties>
    </persistence-unit>
</persistence>
